getBackground(theme)
  if theme == 'light'
    background-color #ecf0f3
  else if theme == 'dark'
    background-color #2f3338
  else
    getBackground('light')
    
getShadow(size, colorSet, isInset = false)
  if isInset
    box-shadow inset (size / 10)px (size / 10)px (size / 5)px colorSet[0], inset (size / 10 * -1)px (size / 10 * -1)px (size / 5)px colorSet[1]
  else
    box-shadow (size / 10)px (size / 10)px (size / 5)px colorSet[0], (size / 10 * -1)px (size / 10 * -1)px (size / 5)px colorSet[1]

getCard(theme, shape, size = 300)
  border-radius 50px
  if theme == 'light'
    getShadow(size, #c9cccf #ffffff, shape == 'pressed')
    if shape == 'flat'
      background #ecf0f3
    else if shape == 'concave'
      background linear-gradient(145deg, #d4d8db, #fdffff)
    else if shape == 'convex'
      background linear-gradient(145deg, #fdffff, #d4d8db)
    else if shape == 'pressed'
      background #ecf0f3
    else
      getCard('light', 'flat')
  else if theme == 'dark'
    getShadow(size, #282b30 #363b40, shape == 'pressed')
    if shape == 'flat'
      background #2f3338
    else if shape == 'concave'
      background linear-gradient(145deg, #32373c, #2a2e32)
    else if shape == 'convex'
      background linear-gradient(145deg, #2a2e32, #32373c)
    else if shape == 'pressed'
      background #2f3338
    else
      getCard('dark', 'flat')
  else
    getCard('light', 'flat')

getFont(style = 'body')
  font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'
  if style == 'heading'
    line-height 1.25
    font-weight bold
    
theme='light'

html
  height 100%

body
  getFont()
  getBackground(theme)
  height 100%
  margin 0
  
  #__next
    height 100%
  
  .container
    display flex
    justify-content center
    align-items center
    height 100%

  .card
    width 300px
    height 300px
    getCard(theme, 'convex')